{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Open Godot Project",
      "type": "shell",
      "command": "godot",
      "args": [
        "--editor",
        "--path",
        "${workspaceFolder}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "reveal": "never",
        "panel": "shared",
        "clear": false
      },
      "problemMatcher": []
    }
  ]
}
